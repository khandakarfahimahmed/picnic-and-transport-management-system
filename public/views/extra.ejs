    async function sendData() {
      let dataObj = {}
      if (localStorage.getItem("destination") != null) {
        dataObj["destination"] = localStorage.getItem("destination")
      }

      if (localStorage.getItem("resort") != null) {
        dataObj["resort"] = localStorage.getItem("resort")
      }

      if (localStorage.getItem("currentLocation") != null) {
        dataObj["currentLocation"] = localStorage.getItem("currentLocation")
      }
      
      if (localStorage.getItem("payment") == null) {
        dataObj["payment"] = "payOnArrival"
      }else{
        dataObj["payment"] = localStorage.getItem("payment")
      }
      
      dataObj["email"] = localStorage.getItem("user")
      dataObj["package"] = localStorage.getItem("package")

      const requestOptions = {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(dataObj)
      };
      try {
        const response = await fetch(
          `${window.location.origin}/pay/arrival`,
          requestOptions
        );
        let data = await response.json()
      } catch (err) {
        console.log(err);
      }
    }

    document.addEventListener("DOMContentLoaded", sendData())

  </script>


