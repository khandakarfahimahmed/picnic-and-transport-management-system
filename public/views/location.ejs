<body>
  <div class="container_fluid">

    <div class="container top_padding r_padding  text-center">
      <select class="form-select" aria-label="Default select example" onclick="setCurrLocation(this)"> 
        <option selected>select current loation and click destination</option>
        <option value="Dhaka">Dhaka</option>
        <option value="Sylhet">Sylhet</option>
        <option value="Cox's Bazar">Cox's Bazar</option>
        <option value="Bandarban">Bandarban</option>
      </select>
      <div class="row ">
        <h5 class="wavy" style="padding-top: 15px; font-family:'Georgia'; padding-bottom: 10px;  ">Select destination </h5>
        <div class="col " >
          <a href="/location/dhaka"><img class="card" src="../views/photos/dhaka.jpg" alt="" onclick="setDestination(event)"></a>
          <p class="text_padding1">Dhaka</p>
        </div>
        <div class="col " >
          <a href="/location/sylhet"><img class="card" src="../views/photos/sylhet.jpg" alt="" onclick="setDestination(event)"></a>
          <p class="text_padding1">Sylhet</p>
        </div>
        <div class="col " >
          <a href="/location/cox"><img class="card" src="../views/photos/cox's bazar.jpg" alt="" onclick="setDestination(event)"></a>
          <p class="text_padding1">Cox's Bazar</p>
        </div>
        <div class="col " >
          <a href="/location/bandarban"><img class="card" src="../views/photos/bandarban.jpg" alt="" onclick="setDestination(event)"></a>
          <p class="text_padding1">Bandarban</p>
        </div>
      </div>
    </div>
  </div>
  <script>
function setCurrLocation(elem){
localStorage.setItem("currentLocation",elem.value)
}

function setDestination(e){
 localStorage.setItem("destination",e.target.parentNode.parentNode.querySelector("p").innerText)
}
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
